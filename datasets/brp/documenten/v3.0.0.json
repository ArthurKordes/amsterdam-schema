{
  "id": "documenten",
  "type": "table",
  "version": "3.0.0",
  "auth": "BRP/R",
  "reasonsNonPublic": [
    "5.1 1d: Bevat persoonsgegevens"
  ],
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "identifier": "identificatie",
    "required": [
      "schema",
      "identificatie"
    ],
    "display": "identificatie",
    "properties": {
      "schema": {
        "$ref": "https://schemas.data.amsterdam.nl/schema@v1.3.0#/definitions/schema"
      },
      "identificatie": {
        "type": "string",
        "description": "aktenummer of beschrijvingDocument"
      },
      "ligtInBrkGemeenteAkte": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          },
          "volgnummer": {
            "type": "integer"
          },
          "beginGeldigheid": {
            "type": "string",
            "format": "date-time"
          },
          "eindGeldigheid": {
            "type": "string",
            "format": "date-time"
          }
        },
        "relation": "brk2:gemeentes",
        "provenance": "$.ligtInGemeente.identificatie",
        "description": "gemeente van de Akte"
      },
      "registergemeenteAkte": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "code van de registergemeenteAkte"
          },
          "omschrijving": {
            "type": "string",
            "description": "omschrijving van de registergemeenteAkte"
          }
        },
        "relation": "brk2:kadastralegemeentecodes",
        "description": "code, opgenomen in Tabel 33, Gemeententabel op naam, die aangeeft in welke gemeente de akte in de registers van de burgerlijke stand in Nederland is opgenomen. Afgeleid uit BRK: Gemeente"
      },
      "aktenummer": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "code van de aktenummer"
          },
          "omschrijving": {
            "type": "string",
            "description": "beschrijving van de aktenummer"
          }
        },
        "description": "aanduiding van de akte die is opgenomen in de registers van de burgerlijke stand in Nederland. De eerste drie posities van het aktenummer dienen conform tabel 39, Tabel Akteaanduiding te zijn. De laatste vier posities bevatten een volgnummer van de akte"
      },
      "ligtInBrkGemeenteDocument": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          },
          "volgnummer": {
            "type": "integer"
          },
          "beginGeldigheid": {
            "type": "string",
            "format": "date-time"
          },
          "eindGeldigheid": {
            "type": "string",
            "format": "date-time"
          }
        },
        "relation": "brk2:gemeentes",
        "provenance": "$.ligtInGemeente.identificatie",
        "description": "De gemeente van het Documen"
      },
      "gemeenteDocument": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "code van de gemeente"
          },
          "omschrijving": {
            "type": "string",
            "description": "omschrijving van de gemeente"
          }
        },
        "description": "code, opgenomen in Tabel 33, Gemeententabel op naam, die aangeeft in welke gemeente de ontlening aan of de afleiding uit het document heeft plaatsgevonden. Afgeleid uit BRK: Gemeente"
      },
      "datumDocument": {
        "type": "object",
        "properties": {
          "datum": {
            "type": "string",
            "format": "date",
            "description": "datum waarop de ontlening aan of de afleiding uit het document heeft plaatsgevonden."
          },
          "jaar": {
            "type": "integer",
            "description": "jaar van de datum, als deze bekend is."
          },
          "maand": {
            "type": "integer",
            "description": "maand van de datum, als deze bekend is."
          },
          "dag": {
            "type": "integer",
            "description": "dag van de datum, als deze bekend is."
          }
        }
      },
      "beschrijvingDocument": {
        "type": "string",
        "description": "beschrijving van het Document"
      }
    }
  }
}
